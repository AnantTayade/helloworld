@model StudentRegistration.WebPortal.Models.OPTViewModel

@{
    ViewData["Title"] = "VerifyOTP";
}

<h2>VerifyOTP</h2>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="VerifyOTP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="mobno" value="@ViewBag.Mobno" />

            @*<div class="form-group">
                <label asp-for="StudendId" class="control-label"></label>
                <input asp-for="StudendId" class="form-control" />
                <span asp-validation-for="StudendId" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="OTP" class="control-label"></label>
                <input asp-for="OTP" class="form-control" placeholder="Enter OTP" />
                <span asp-validation-for="OTP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@{ 
    if (ViewBag.error!=null)
    {
        <script>
            alert('@ViewBag.error');
        </script>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
